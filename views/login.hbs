<div class="container row">
    <div class="jumbotron text-center col-lg-6 col-md-6 col-sm-12  pull-center animated rotateIn">
        <h2>Please Login</h2>
        <form>
            <div>
                <label>Username:</label>
                <input type="text" name="username" id="loginUserName" required />
            </div>
            <div>
                <label>Password:</label>
                <input type="password" name="password" id="loginPassword" required />
            </div>
            <div>
                <input class="btn btn-primary" type="submit" value="Log In" id="loginSubmit" required />
            </div>
        </form>
    </div>
</div>